
<div class="container">
  <h2>Create your new cocktail!</h2>
  <hr>
  <%= simple_form_for [@cocktail] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
