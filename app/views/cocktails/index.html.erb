<div class="container">
  <h1>COCKTAILS</h1>
  <div class="row justify-content-center">
    <% @cocktails.each do |cocktail| %>
      <h2><%= link_to cocktail.name, cocktail_path(cocktail), class: "btn btn-primary"%></h2>
      <hr>
    <% end %>

    <%= link_to "Add a Cocktail", new_cocktail_path, class: "btn btn-danger"%>
  </div>
</div>
